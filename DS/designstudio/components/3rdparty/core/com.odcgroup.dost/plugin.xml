<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.wst.xml.core.catalogContributions">
      <catalogContribution>
         <public
               publicId="-//OASIS//DTD DITA Map//EN"
               uri="dost/dtd/map.dtd"
               webURL="http://docs.oasis-open.org/dita/v1.1/CD01/dtd/map.dtd"/>
         <public
               publicId="-//OASIS//DTD DITA Topic//EN"
               uri="dost/dtd/topic.dtd"
               webURL="http://docs.oasis-open.org/dita/v1.1/CD01/dtd/topic.dtd"/>
         <public
               publicId="-//OASIS//DTD DITA Concept//EN"
               uri="dost/dtd/concept.dtd"
               webURL="http://docs.oasis-open.org/dita/v1.1/CD01/dtd/concept.dtd"/>
         <public
               publicId="-//OASIS//DTD DITA Task//EN"
               uri="dost/dtd/task.dtd"
               webURL="http://docs.oasis-open.org/dita/v1.1/CD01/dtd/task.dtd"/>
         <public
               publicId="-//OASIS//DTD DITA Reference//EN"
               uri="dost/dtd/reference.dtd"
               webURL="http://docs.oasis-open.org/dita/v1.1/CD01/dtd/reference.dtd"/>
      </catalogContribution>
   </extension> 
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.xml.dita.any"
            file-extensions="dita"
            id="org.xml.dita.topic"
            name="DITA Topic">
      </content-type>
      <content-type
            base-type="org.xml.dita.any"
            file-extensions="ditamap"
            id="org.xml.dita.map"
            name="DITA Map">
      </content-type>
      <content-type
            base-type="org.xml.dita.any"
            file-extensions="ditaval"
            id="org.xml.dita.processingProfile"
            name="DITA Processing Profile">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            id="org.xml.dita.any"
            name="DITA File">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ant.core.extraClasspathEntries">
      <extraClasspathEntry
            eclipseRuntime="true"
            headless="true"
            library="dost/lib/avalon-framework-cvs-20020806.jar">
      </extraClasspathEntry>
      <extraClasspathEntry
            eclipseRuntime="true"
            headless="true"
            library="dost/lib/batik.jar">
      </extraClasspathEntry>
      <extraClasspathEntry
            eclipseRuntime="true"
            headless="true"
            library="dost/lib/dost.jar"/>
      <extraClasspathEntry
            eclipseRuntime="true"
            headless="true"
            library="dost/lib/fop.jar"/>
      <extraClasspathEntry
            eclipseRuntime="true"
            headless="true"
            library="dost/lib/icu4j.jar"/>
      <extraClasspathEntry
            eclipseRuntime="true"
            headless="true"
            library="dost/lib/xalan.jar"/>
      <extraClasspathEntry
            eclipseRuntime="true"
            headless="true"
            library="dost/lib/resolver.jar">
      </extraClasspathEntry>
   </extension>

</plugin>
