Enquiry "ACCT.BAL.TODAY" for "name:/ACM_AccountOpening:ACCOUNT#" {
	metamodelVersion: "9.0.0.20130126"
	description {
		en = "Account Balance Summary"
	}

	header {
		label {
			en = "@(25)@(25,0)"
		}

		column: 25
		line: 0
	}

	zero-records-display: true
	no-selection: true
	show-all-books: false
	start-line: 4
	end-line: 99 fixed-selection "CATEGORY" {
		Between "1000", "9999"
	}

	fixed-sort: "CUSTOMER" None
	custom-selection {

		field "ACCOUNT.NUMBER" {
			label {
				en = "Account.No"
			}

		}

		AND

		field "CUSTOMER.CODE" {
			label {
				en = "Customer"
			}

		}

		AND

		field "CATEGORY" {
			label {
				en = "Product"
			}

		}

		AND

		field "CURRENCY" {
			label {
				en = "Currency"
			}

		}

		AND

		field "LIMIT.REF" {
			label {
				en = "Limit Ref"
			}

		}

	}

	field "ACC" {
		label {
			en = "Account No"
		}

		length: 19
		alignment: Right
		comma-separator: false
		position {
			column: 1
		}

		processing-mode: Single
		operation: application-field-name "@ID"
	}

	field "ACC.FILE" {
		display-type: "CLASS-ENQ.H.TITLE"
		alignment: Left
		comma-separator: false
		display-section: Header
		operation: constant "\"ACCOUNT\""
	}

	field "HEADER.TITTLE" {
		display-type: "CLASS-TITLE"
		alignment: Left
		comma-separator: false
		display-section: Header
		position {
			column: 1
			line: 0
		}

		operation: constant "\" Balance Summary\""
	}

	field "HEADER" {
		display-type: "CLASS-ENQ.H.DATA.LABEL"
		alignment: Left
		comma-separator: false
		display-section: Header
		position {
			column: 1
			line: 1
		}

		operation: constant "\"Customer:\""
	}

	field "ACCOUNT" {
		label {
			en = "Name"
		}

		length: 35
		alignment: Left
		comma-separator: false
		position {
			column: 3
		}

		processing-mode: Single
		operation: application-field-name "@ID"
		conversion: getFrom "ACCOUNT" "SHORT.TITLE" false
	}

	field "LIM.REF" {
		label {
			en = "Limit ref"
		}

		length: 10
		alignment: Right
		comma-separator: false
		position {
			column: 4
		}

		processing-mode: Single
		hidden: true
		operation: application-field-name "LIMIT.REF"
	}

	field "CAT.TYPE" {
		label {
			en = "Product"
		}

		format: User
		length: 25
		alignment: Left
		comma-separator: false
		position {
			column: 5
		}

		processing-mode: Single
		operation: application-field-name "CATEGORY"
		conversion: getFrom "CATEGORY" "SHORT.NAME" false
	}

	field "CCY" {
		label {
			en = "Ccy"
		}

		display-type: "CLASS-POSNEG"
		length: 3
		alignment: Left
		comma-separator: false
		position {
			column: 6
		}

		processing-mode: Single
		operation: application-field-name "CURRENCY"
	}

	field "WORK.BAL" {
		label {
			en = "Working Bal"
		}

		display-type: "CLASS-POSNEG"
		format: Currency "CCY" negative-pattern -#
		length: 19
		alignment: Right
		comma-separator: true
		position {
			column: 7
		}

		processing-mode: Single
		operation: application-field-name "@ID"
		conversion: call
		jBC: "@ E.GET.AC.WORKING.BALANCE"
	}

	field "AMOUNT" {
		label {
			en = "Ledger Bal"
		}

		display-type: "CLASS-POSNEG"
		format: Currency "CCY" negative-pattern -#
		length: 19
		alignment: Right
		comma-separator: true
		position {
			column: 8
		}

		processing-mode: Single
		operation: application-field-name "@ID"
		conversion: call
		jBC: "@ E.GET.AC.ONLINE.ACTUAL.BALANCE"
	}

	field "CLEARED" {
		label {
			en = "Cleared Bal"
		}

		display-type: "CLASS-POSNEG"
		format: Currency "CCY" negative-pattern -#
		length: 19
		alignment: Right
		comma-separator: true
		position {
			column: 9
		}

		processing-mode: Single
		operation: application-field-name "@ID"
		conversion: call
		jBC: "@ E.GET.AC.ONLINE.CLEARED.BALANCE"
	}

	field "LOCK.AMT" {
		label {
			en = "Locked Amount"
		}

		display-type: "CLASS-POSNEG"
		format: Currency "CCY" negative-pattern -#
		length: 19
		alignment: Right
		comma-separator: true
		position {
			column: 10
		}

		processing-mode: Multi
		hidden: true
		operation: application-field-name "LOCKED.AMOUNT"
	}

	field "CUST" {
		format: Currency "CCY" negative-pattern -#
		alignment: Left
		comma-separator: false
		processing-mode: Single
		operation: application-field-name "CUSTOMER"
	}

	field "B.CUST" {
		display-type: "CLASS-ENQ.H.DATA" break-condition {
			break: Page
		}

		alignment: Left
		comma-separator: false
		display-section: Header
		position {
			page-throw: true
		}

		operation: break-change "CUST"
	}

	field "D.CUST" {
		display-type: "CLASS-ENQ.H.DATA" break-condition {
			break: Page
		}

		length: 10
		alignment: Right
		comma-separator: false
		display-section: Header
		position {
			column: 12
			line: 1
		}

		operation: field-extract "CUST"
	}

	field "D.CUSTNM" {
		display-type: "CLASS-ENQ.H.DATA" break-condition {
			break: Page
		}

		length: 40
		alignment: Left
		comma-separator: false
		display-section: Header
		position {
			column: 30
			line: 1
		}

		operation: field-extract "CUST"
		conversion: getFrom "CUSTOMER" "SHORT.NAME" false
	}

	field "SEL1" {
		alignment: Left
		comma-separator: false
		display-section: Header
		operation: constant "\"ACCT.ID EQ \""
	}

	field "SEL2" {
		display-type: "CLASS-ENQ.NORECS"
		alignment: Left
		comma-separator: false
		display-section: Header
		operation: calc "SEL1":"ACC"
	}

	field "ZERORECORDS" {
		display-type: "CLASS-ENQ.NORECS"
		alignment: Left
		comma-separator: false
		display-section: Header
		position {
			column: 1
		}

		operation: constant "\"No Accounts to display\""
	}

	drilldown {
		description {
			en = "Statement entries today"
		}

		label-field: "ACC"
		enquiry "STMT.ENT.TODAY"
		criteria: "SEL2"
	}

	drilldown {
		description {
			en = "Entries Since Last Stmt"
		}

		label-field: "ACC"
		enquiry "STMT.ENT.LAST"
		criteria: "SEL2"
	}

	drilldown {
		description {
			en = "Forward projections"
		}

		label-field: "ACC"
		enquiry "NOSTRO.FWD.BAL"
		criteria: "ACCOUNT.ID" Equals "ACC"
	}

	drilldown {
		description {
			en = "Historical Statements"
		}

		label-field: "ACC"
		enquiry "ACCT.STMT.HIST"
		criteria: "STMT.ACCOUNT.NO" Equals "ACC"
	}

	drilldown {
		description {
			en = "Account details"
		}

		trigger-field: "ACC"
		label-field: "ACC"
		from-field: "ACC.FILE" See
	}

}