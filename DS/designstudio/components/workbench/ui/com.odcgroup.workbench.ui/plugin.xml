      <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="com.odcgroup.workbench.ui.internal.markers.OfsMarkerResolutionGenerator"
            markerType="com.odcgroup.workbench.core.OfsProblem">
      </markerResolutionGenerator>
