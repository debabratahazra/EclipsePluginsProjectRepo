<?xml version="1.0" encoding="UTF-8"?>
<introContent>
   <extensionContent
         id="optima-link-intro-extension"
         name="Optima links overview"
         path="overview/@"
         style="css/overview.css">
      <group
            id="optima-link-group"
            style-id="content-group">
         <link
               id="cdt-link"
               label="C/C++ Perspective"
               url="http://org.eclipse.ui.intro/runAction?pluginId=com.ose.optima&amp;class=com.ose.optima.OpenPerspectiveAction&amp;id=org.eclipse.cdt.ui.CPerspective"
               style-id="content-link">
            <text>Open the C/C++ perspective</text>
         </link>
         <link
               id="debug-link"
               label="Debug Perspective"
               url="http://org.eclipse.ui.intro/runAction?pluginId=com.ose.optima&amp;class=com.ose.optima.OpenPerspectiveAction&amp;id=org.eclipse.debug.ui.DebugPerspective"
               style-id="content-link">
            <text>Open the Debug perspective</text>
         </link>
         <link
               id="system-browser-link"
               label="Optima System Browsing Perspective"
               url="http://org.eclipse.ui.intro/runAction?pluginId=com.ose.optima&amp;class=com.ose.optima.OpenPerspectiveAction&amp;id=com.ose.system.ui.SystemBrowserPerspective"
               style-id="content-link">
            <text>Open the Optima System Browsing perspective</text>
         </link>
         <link
               id="system-profiler-link"
               label="Optima System Profiling Perspective"
               url="http://org.eclipse.ui.intro/runAction?pluginId=com.ose.optima&amp;class=com.ose.optima.OpenPerspectiveAction&amp;id=com.ose.prof.ui.ProfilerPerspective"
               style-id="content-link">
            <text>Open the Optima System Profiling perspective</text>
         </link>
         <link
               id="source-profiler-link"
               label="Optima Source Profiling Perspective"
               url="http://org.eclipse.ui.intro/runAction?pluginId=com.ose.optima&amp;class=com.ose.optima.OpenPerspectiveAction&amp;id=com.ose.perf.ui.ProfilerPerspective"
               style-id="content-link">
            <text>Open the Optima Source Profiling perspective</text>
         </link>
         <link
               id="log-manager-link"
               label="Optima Log Management Perspective"
               url="http://org.eclipse.ui.intro/runAction?pluginId=com.ose.optima&amp;class=com.ose.optima.OpenPerspectiveAction&amp;id=com.ose.event.ui.EventPerspective"
               style-id="content-link">
            <text>Open the Optima Log Management perspective</text>
         </link>
         <link
               id="log-analyzer-link"
               label="Optima Log Analyzer Perspective"
               url="http://org.eclipse.ui.intro/runAction?pluginId=com.ose.optima&amp;class=com.ose.optima.OpenPerspectiveAction&amp;id=com.zealcore.se.ui.PerspectiveFactory"
               style-id="content-link">
            <text>Open the Optima Log Analyzer perspective</text>
         </link>
      </group>
   </extensionContent>
</introContent>
